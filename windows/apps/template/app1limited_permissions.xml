<?xml version="1.0" encoding="UTF-8"?>

<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="/Applications/rti_connext_dds-5.3.1/resource/schema/dds_security_permissions.xsd">

    <permissions>
        <grant name="demo_appPermissions">

            <!-- Change the fields below to match those in your appname.cnf file. -->
            <subject_name>/C=US/ST=CA/O=Real Time Innovations/CN=app1/emailAddress=app1@rti.com</subject_name>

            <validity>
                <not_before>2013-06-01T13:00:00</not_before>
                <not_after>2033-06-01T13:00:00</not_after>
            </validity>

            <!-- Domains 0-6 carries read and write restrictions on some topics -->
            <allow_rule>
                <domains>
                    <id_range>
                        <min>0</min>
                        <max>10</max>
                    </id_range>
                </domains>
                <publish>
                    <topics>
                        <topic>Cir*</topic>
                        <topic>Squ*</topic>
                    </topics>
                </publish>
                <subscribe>
                    <topics>
                        <topic>Cir*</topic>
                        <topic>Tri*</topic>
                        <topic>Squ*</topic>
                    </topics>
                </subscribe>
            </allow_rule>

            <default>DENY</default>

        </grant>
    </permissions>
</dds>
