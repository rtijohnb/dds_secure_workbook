<?xml version="1.0" encoding="UTF-8"?>

<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/7.2.0/rti_dds_qos_profiles.xsd">

    <permissions>

        <grant name="routingPermissions">

            <!-- TODO: Change the fields below to match those in your appname.cnf file.  Change 'demo_app' to your app's name -->
            <subject_name>/C=US/ST=CA/O=Real Time Innovations/CN=routing/emailAddress=routing@rti.com</subject_name>

            <validity>
                <!-- Format is CCYY-MM-DDThh:mm:ss[Z|(+|-)hh:mm] in GMT -->
                <not_before>2013-06-01T13:00:00</not_before>
                <not_after>2033-06-01T13:00:00</not_after>
            </validity>

            <allow_rule>
                <domains>
                    <id_range>
                        <min>2</min>
                        <max>9</max>
                    </id_range>
                </domains>
                <publish>
                    <partitions>
                        <partition>*</partition>
                    </partitions>
                    <topics>
                        <topic>Square</topic>
                    </topics>
                </publish>
                <subscribe>
                    <partitions>
                        <partition>*</partition>
                    </partitions>
                    <topics>
                        <topic>Circle</topic>
                    </topics>
                </subscribe>
            </allow_rule>

            <deny_rule>
                <domains>
                    <id_range>
                        <min>2</min>
                        <max>9</max>
                    </id_range>
                </domains>

                <publish>
                    <topics>
                        <topic>secure_topic_this_app_can_NOT_write</topic>
                    </topics>
                </publish>

                <subscribe>
                    <topics>
                        <topic>Triangle</topic>
                    </topics>
                </subscribe>

            </deny_rule>

            <default>DENY</default>

        </grant>
    </permissions>
</dds>
