<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/6.0.1/rti_dds_qos_profiles.xsd">
    <qos_library name="SecureDemo">

        <qos_profile name="Secure-app1limited" base_name="BuiltinQosLib::Generic.Security">
            <participant_qos>
                <participant_name>
                    <name>Secure app1limited</name>
                    <role_name>app1limited</role_name>
                </participant_name>
                <transport_builtin>
                    <mask>UDPv4</mask>
                </transport_builtin>
                <property>
                    <value>
                        <!-- logging options -->
                        <element>
                            <name>com.rti.serv.secure.logging.verbosity</name>
                            <value>INFORMATIONAL</value>
                        </element>
                        <element>
                            <name>com.rti.serv.secure.logging.log_file</name>
                            <value>C:\Users\ross\Documents\rti_workspace\6.0.1\dds_secure_workbook\apps\app1limited\app1.secure.log.txt</value>
                        </element>
                        <element>
                            <name>com.rti.serv.secure.logging.distribute.enable</name>
                            <value>true</value>
                        </element>
                        <!-- common files -->
                        <element>
                            <name>dds.sec.auth.identity_ca</name>
                            <value>file:C:\Users\ross\Documents\rti_workspace\6.0.1\dds_secure_workbook\apps\deployall\identcacert.pem</value>
                        </element>
                        <element>
                            <name>dds.sec.access.permissions_ca</name>
                            <value>file:C:\Users\ross\Documents\rti_workspace\6.0.1\dds_secure_workbook\apps\deployall\permcacert.pem</value>
                        </element>
                        <element>
                            <name>dds.sec.access.governance</name>
                            <value>file:C:\Users\ross\Documents\rti_workspace\6.0.1\dds_secure_workbook\apps\deployall\demo_governance_signed.p7s</value>
                        </element>
                        <!-- application specific files -->
                        <element>
                            <name>dds.sec.auth.identity_certificate</name>
                            <value>file:C:\Users\ross\Documents\rti_workspace\6.0.1\dds_secure_workbook\apps\app1limited\deploy\app1limitedidentcert.pem</value>
                        </element>
                        <element>
                            <name>dds.sec.auth.private_key</name>
                            <value>file:C:\Users\ross\Documents\rti_workspace\6.0.1\dds_secure_workbook\apps\app1limited\deploy\app1limitedpriv.pem</value>
                        </element>
                        <element>
                            <name>dds.sec.access.permissions</name>
                            <value>file:C:\Users\ross\Documents\rti_workspace\6.0.1\dds_secure_workbook\apps\app1limited\deploy\app1limited_permissions_signed.p7s</value>
                        </element>
